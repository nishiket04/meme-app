<?xml version="1.0" encoding="utf-8"?>
<!--For flash screen logo animation-->
<set xmlns:android="http://schemas.android.com/apk/res/android">
<!-- for make disperse to visible   -->
    <alpha
        android:fromAlpha="0"
        android:toAlpha="1"
        android:duration="2000"
        />
<!-- for make small none to actual size of logo   -->
    <scale
        android:fromXScale="0"
        android:fromYScale="0"
        android:toXScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toYScale="1"
        android:duration="1000"/>

</set>